@model MultiBooks_Models.Publisher

@{ Layout = "~/Views/Shared/_Layout.cshtml";
   var title = "Create a Publisher"; }

<div class="border p-3 DivBgForm">
    <form class="form-horizontal" method="post">
        <div class="row p-3 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Id != 0)
            {
                //edit
                title = "Edit a Publisher";
            }
            <div class="col-12 border-bottom">
                <h2 class="text-primary">@title</h2>
            </div>
            <div class="col-8 pt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Speciality"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Speciality" class="form-control" />
                        <span asp-validation-for="Speciality" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PublisherSite"></label>
                    </div>
                    <div class="col-8">
                        <input type="url" asp-for="PublisherSite" class="form-control" />
                        <span asp-validation-for="PublisherSite" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                  <div class="col-8 offset-4">
                    <div class="row">
                      <div class="col">
                        @if (Model.Id != 0)
                        {
                          <input type="submit" class="btn btn-info w-100" value="Edit" />
                        }
                        else
                        {
                          <input type="submit" class="btn btn-info w-100" value="Create" />
                        }

                      </div>
                      <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">Back to list</a>
                      </div>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}