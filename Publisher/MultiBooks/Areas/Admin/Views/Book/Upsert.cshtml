@model MultiBooks_Models.ViewModels.BookVM
@using MultiBooks_Utility;

@{ var title = "Create a Book"; }

<div class="border p-3 DivBgForm">
  <form class="form-horizontal" method="post" enctype="multipart/form-data"  asp-area="Admin" asp-controller="Book" asp-action="Upsert">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Book.Id" />
    @if (Model.Book.Id != 0)
    {
      //Edit
      title = "Edit a Book";
    }
    <div class="form-group row">
      <h2 class="text-info pl-3">@title</h2>
      <hr />
    </div>
    <div class="row">
      <div class="col-7">

        <div class="form-group row">

          <div class="col-3">
            <label asp-for="Book.Available"></label>
          </div>
          <div class="col-9">
            <input type="checkbox" asp-for="Book.Available" class="form-check-input" />
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Book.Title"></label>
          </div>
          <div class="col-9">
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Book.ISBN"></label>
          </div>
          <div class="col-9">
            <input asp-for="Book.ISBN" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Book.Price"></label>
          </div>
          <div class="col-9">
            <input type="number" asp-for="Book.Price" class="form-control text-right" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Book.PublishedDate"></label>
          </div>
          <div class="col-9">
            <input type="date" asp-for="Book.PublishedDate" value="2021-01-01" class="form-control" />
            <span asp-validation-for="Book.PublishedDate" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            Subject
          </div>
          <div class="col-9">
            @Html.DropDownListFor(s => s.Book.Subject_Id, Model.SubjectList.OrderBy(s => s.Text), "-Select a Subject",
           new { @class = "form-control" })
            <span asp-validation-for="Book.Subject_Id" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            Publisher
          </div>
          <div class="col-9">
            @Html.DropDownListFor(s => s.Book.Publisher_Id, Model.PublisherList.OrderBy(s => s.Text), "-Select a Publisher",
           new { @class = "form-control" })
            <span asp-validation-for="Book.Publisher_Id" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Book.Resume"></label>
          </div>
          <div class="col-9">
            <textarea asp-for="Book.Resume" class="form-control summernote"></textarea>
            <span asp-validation-for="Book.Resume" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-9 offset-3">
            <div class="row">
              <div class="col">
                @if (Model.Book.Id != 0)
                {
                  <input type="submit" class="btn btn-info w-100" model="Model.Book.Id" value="Edit" />
                }
                else
                {
                  <input type="submit" class="btn btn-info w-100" value="Create" />
                }

              </div>
              <div class="col">
                <a asp-action="Index" class="btn btn-success w-100">Back to list</a>
              </div>
            </div>
          </div>
        </div>

      </div>

      <div class="col-5">
        <div class="form-group row">
          <div class="col-3">
            Cover
          </div>
          <div class="col-9">
            <input type="file" asp-for="Book.Cover" name="files" id="uploadBox" multiple class="form-control" />
          </div>
        </div>


        <div class="form-group offset-3 row">
          @if (Model.Book.Id != 0)
          {
            <div class="col-3">
              <img src="@AppConst.ImagePathBooksView@Model.Book.Cover" style="width:350px;height:450px;border-radius:5px; border:1px solid #bbb9b9" />
            </div>}
          else
          {
            <div class="col-3">
              <div style="width:350px;height:450px;border-radius:5px; border:1px solid #bbb9b9"></div>
            </div>}
        </div>

      </div>

    </div>
  </form>
</div>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
  <script>
    $(document).ready(function () {
      $('.summernote').summernote({
        height: 300
      });
    });

  </script>

}
