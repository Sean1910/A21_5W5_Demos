@model IEnumerable<MultiBooks_Models.Book>

<div class="container p-3 DivBgForm">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Books</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="Book" asp-action="Upsert" class="btn btn-success">
        Create New Book
      </a>
    </div>
  </div>
  <br/>

  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped border-primary" style="width:100%">
      <thead class="bg-primary">
        <tr>
          <th>Title</th>
          <th>Price</th>
          <th>Subject</th>
          <th>Publisher</th>
          <th>Authors</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-striped table-light border-dark">
        @foreach (var item in Model.OrderBy(i => i.Title))
        {
        <tr class="text-dark">
          <td width="20%">@item.Title</td>
          <td width="8%">@item.Price</td>
          <td width="12%">@item.Subject.Name</td>
          <td width="15%">@item.Publisher.Name</td>
          <td width="20%">
            @{ var authors = ""; }
            @if(item.AuthorsBooks != null) { 
            @foreach (var auth in item.AuthorsBooks)
            {
              authors += @auth.Author.FullName + ", <br/>";
            }
            @authors.Trim().TrimEnd(',')}
          </td>
          <td width="25%" class="text-center">
            <div class="w-75 btn-group" role="group">
              <a class="btn btn-warning mx-2" asp-action="Upsert" asp-route-Id="@item.Id">
                Edit
              </a>
              <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@item.Id">
                Delete
              </a>
              <a class="btn btn-success text-white" asp-controller="Book" asp-action="ManageAuthors" asp-route-Id="@item.Id">
                Authors
              </a>
            </div>
          </td>
        </tr>
        }

      </tbody>
    </table>
  }
  else
  {
    <p>No book exists...</p>}
</div>
