@model IEnumerable<MultiBooks.Models.Book>

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<br />
<br />
<div class="border p-4 bg-white">
  <div class="row">
    <div class="col-8">
      <h2 class="text-info">Our Books</h2>
    </div>
    <div class=" col-2 text-right">
      <a asp-action="Create" class="btn btn-info form-control"> Create New </a>
    </div>
  </div>
  <br />
  <div>
    @if (Model.Count() > 0)
    {
    <table class="table table-bordered table-striped border-primary" style="width:100%">
      <thead class="bg-primary">
        <tr>
          <th>
            Title
          </th>
          <th>
            ISBN
          </th>
          <th>
            Price
          </th>
          <th>
            Subject
          </th>
          <th>
            Publisher
          </th>
          <th>
            Speciality
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody class="table-striped table-light border-dark">
        @foreach (var item in Model)
        {
          <tr>
            <td width="20%">@item.Title</td>
            <td width="10%">@item.ISBN</td>
            <td width="5%">@item.Price</td>
            <td width="18%">@item.Subject.Name</td>
            <td width="12%">@item.Publisher.Name</td>
            <td width="15%">@item.Publisher.Speciality</td>
            <td width="20%" class="text-center">
              <a class="btn btn-primary text-white" asp-action="Update" asp-route-Id="@item.Id">
                Edit
              </a>
              <a class="btn btn-info text-white" asp-action="Details" asp-route-Id="@item.Id">
                Details
              </a>
              <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                Delete
              </a>

            </td>
          </tr>
        }
      </tbody>
    </table> }
else
{
<p>No Book in the list...</p>}
  </div>
</div>
