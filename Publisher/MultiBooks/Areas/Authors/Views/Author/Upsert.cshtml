@model MultiBooks_Models.ViewModels.AuthorVM
@using MultiBooks_Utility;

@{ Layout = "~/Views/Shared/_Layout.cshtml";
  var title = "Create an Author"; }

<div class="p-3 DivBgForm">
  <form class="form-horizontal" method="post" enctype="multipart/form-data">
    <div class="row p-3 ">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="col-12 border-bottom container rounded p-2">
        <input type="hidden" asp-for="Author.Id" />
        <input type="hidden" asp-for="Author.AuthorDetail_Id" />
        @if (Model.Author.Id > 0)
        {
          //Edit
          title = "Edit an Author";
        }
        <h2 class="text-primary">@title</h2>
      </div>

      <div class="col-7  pt-4">
        <div class="form-group row">
          <div class="col-2">
            <label asp-for="Author.FirstName"></label>
          </div>
          <div class="col-7">
            <input asp-for="Author.FirstName" class="form-control" />
            <span asp-validation-for="Author.FirstName" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <label asp-for="Author.LastName"></label>
          </div>
          <div class="col-7">
            <input asp-for="Author.LastName" class="form-control" />
            <span asp-validation-for="Author.LastName" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <label asp-for="Author.AuthorDetail.Biography"></label>
          </div>
          <div class="col-7">
            <textarea asp-for="Author.AuthorDetail.Biography" class="form-control text-right summernote"></textarea>
            <span asp-validation-for="Author.AuthorDetail.Biography" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-2">
            <label asp-for="Author.AuthorDetail.Photo"></label>
          </div>
          <div class="col-7">
            <input type="file" name="files" id="uploadBox" asp-for="Author.AuthorDetail.Photo" class="form-control" />
            <span asp-validation-for="Author.AuthorDetail.Photo" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-7 offset-2">
            @if (Model.Author.Id != 0)
            {
              <partial name="_EditAndBackToListButton" model="Model.Author.Id" /> }
            else
            {
              <partial name="_CreateAndBackToListButton" />}
          </div>
        </div>
      </div>

      <div class="col-5 border pt-5">
        @if (Model.Author.Id != 0)
        {
          var pathPhoto = @AppConst.ImagePathAuthorsView + @Model.Photo;
          <img src="@AppConst.ImagePathAuthorsView@Model.Photo" height="300px" width="300px" alt="Picture of the author" />
        }
      </div>

    </div>
</form>
</div>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
  <script>
    $(document).ready(function () {
      $('.summernote').summernote({
      height:370});
    });

    function validateInput() {
      if (document.getElementById("uploadBox").value == "") {
        Swal.fire(
          'Error!',
          'Please upload an Image!',
          'error'
        )
        return false;
      }
      return true;
    }
  </script>

}
